{
  "name": "updatefaker",
  "version": "1.0.0",
  "description": "",
  "main": "index.html",
  "scripts": {
    "bundle-js": "bundle-js resources/js/bundle.js -o public/js/bundle.js",
    "minify-bundle": "minify public/js/bundle.js > public/js/bundle.min.js && mv public/js/bundle.min.js public/js/bundle.js",
    "clear-compiled": "npx rimraf public/*",
    "watch-react": "webpack --env development --watch",
    "watch-sass": "node-sass --importer=node_modules/node-sass-tilde-importer --watch --recursive --source-map true resources/sass/ --output public/css",
    "watch-babel": "npx babel --watch --source-maps inline resources/js/*.js --presets @babel/preset-env --out-dir public/js",
    "build-react": "webpack --env development",
    "build-sass": "node-sass --importer=node_modules/node-sass-tilde-importer --source-map true resources/sass/ --output public/css",
    "build-babel": "npx babel --source-maps inline resources/js/*.js --presets @babel/preset-env --out-dir public/js",
    "deploy-react": "webpack --env production ",
    "deploy-sass": "node-sass --importer=node_modules/node-sass-tilde-importer --output-style=compressed resources/sass/ --output public/css",
    "deploy-babel": "npx babel resources/js/*.js --presets @babel/preset-env --out-dir public/js",
    "CssCompat": "npx postcss --no-map public/css/*.css -d public/css --use autoprefixer",
    "dev": "concurrently -k \"npm run watch-react\" \"npm run watch-sass\"",
    "build": "npm run clear-compiled && npm run build-react && npm run bundle-js",
    "deploy": "npm run clear-compiled && npm run deploy-react && npm run bundle-js && npm run minify-bundle",
    "postinstall": "npm run deploy"
  },
  "author": "Andr√© Azevedo <andre.azev@gmail.com>",
  "license": "UNLICENSED",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-export-default-from": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@fortawesome/fontawesome-svg-core": "^1.2.34",
    "@fortawesome/free-brands-svg-icons": "^5.15.2",
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "babel-loader": "^8.2.2",
    "bootstrap-scss": "^4.6.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.0.1",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^6.0.0",
    "html-webpack-plugin": "^4.5.1",
    "node-sass": "^5.0.0",
    "node-sass-tilde-importer": "^1.0.2",
    "platform-detect": "^3.0.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-youtube": "^7.13.1",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.1.1",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0",
    "webpack-shell-plugin": "^0.5.0"
  },
  "dependencies": {}
}
